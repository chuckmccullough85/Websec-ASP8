@model ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<div class="container">
    <div class="row">
        <h2>Profile</h2> <hr />
    </div>
    <div class="row">
        <div class="col-md-6">
            <form asp-action="SaveProfile" asp-controller="Account" method="post">
                <div class="form-group">
                    <label asp-for="FirstName" />
                    <input class="form-control" asp-for="FirstName" />
                    <span class="has-error" asp-validation-for="FirstName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" />
                    <input class="form-control" asp-for="LastName" />
                    <span class="has-error" asp-validation-for="LastName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone" />
                    <input class="form-control" asp-for="Phone" />
                    <span class="has-error" asp-validation-for="Phone"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" />
                    <input class="form-control" asp-for="Email" />
                </div>
                <span class="has-error" asp-validation-for="Email"></span>
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Save</button>
                </div>
            </form>
        </div>

    </div>

</div>